<h1>タスク一覧</h1>
<ul>
  <% @tasks.each do |task| %>
    <li>
      <!--link_toメソッドのオプションでclass属性を指定し、スタイルシートからstatusに応じた色を適用-->
      <%= link_to task.title, task, :class => "#{task.status}" %> <%= task.created_at.strftime("%Y年%m月%d日") %>
    </li>
  <% end %>    
</ul>

<p>
  <%= link_to "タスク登録", new_task_path %>
  <%= link_to "非表示一覧", tasks_hide_path %>
</p>